<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.sapienza.pervasivesystems.smartmuseum">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SmartMuseumApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_smartmuseum3"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.LoginActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".view.SignupActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity android:name=".view.ListOfExhibitsActivity" />
        <activity android:name=".view.ItemOfExhibitsActivity" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".view.DetailOfExhibitActivity" />
        <activity android:name=".view.ListOfObjectsActivity" />
        <activity android:name=".view.ItemOfObjectsActivity" />
        <activity android:name=".view.DetailOfObjectActivity"></activity>
    </application>

</manifest>